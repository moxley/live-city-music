#!/usr/bin/env ruby

# Overridden by moxley
if File.exists?("#{ENV['HOME']}/.env")
  File.open("#{ENV['HOME']}/.env").each_line do |line|
    line.strip!
    line.sub!(/export /, '')
    name, value = line.split('=')
    ENV[name] = value
  end
end

ENV['BUNDLE_GEMFILE'] ||= File.expand_path('../../Gemfile', __FILE__)
load Gem.bin_path('bundler', 'bundle')
